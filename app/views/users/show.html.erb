<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <p><%= link_to "フォロー", followings_user_path(@user) %>(<%= @user.following_relationships.count %>)</p>
      <p><%= link_to "フォロワー", followers_user_path(@user) %>(<%= @user.follower_relationships.count %>)</p>
      <div class="col-xs-12">
      <p class="col-xs-12"><%= @user.university %>に在学中</p>
      </div>
      <div class="col-xs-12">
      <p class="col-xs-12"><%= @user.area %>出身</p>
      </div>
      <div class="col-xs-12">
      <p class="col-xs-12">自己紹介↓↓</p>
      <p class="col-xs-12"><%= @user.profile %></p>
      </div>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>
